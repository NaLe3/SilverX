# ==== Application ====
RAILS_ENV=development
NODE_ENV=development

# ==== Database / Cache ====
DATABASE_URL=postgres://postgres:postgres@db:5432/postgres
REDIS_URL=redis://redis:6379/0

# ==== Telco ====
TELCO_PROVIDER=twilio           # twilio|vonage|jambonz
TELCO_WEBHOOK_PUBLIC_URL=       # ex: https://xxxx.ngrok.app
TELCO_ACCOUNT_SID=
TELCO_AUTH_TOKEN=

# ==== STT ====
STT_PROVIDER=gladia             # gladia|speechmatics|fake
GLADIA_API_KEY=
SPEECHMATICS_API_KEY=

# ==== TTS ====
TTS_PROVIDER=elevenlabs         # elevenlabs|readspeaker|acapela|fake
ELEVEN_API_KEY=
ELEVEN_VOICE_ID=
AUDIO_TARGET=mulaw8k            # mulaw8k|pcm16k

# ==== LLM ====
LLM_PROVIDER=mistral
MISTRAL_API_KEY=

# ==== Privacy / RGPD ====
RECORDING_ENABLED=false         # false = no audio persist
DATA_TTL_DAYS=30                # purge calls/messages/actions
CONSENT_TEXT="Cet appel peut être enregistré..."

# ==== Admin Console ====
APP_HOST=localhost
APP_PROTOCOL=http
DEFAULT_FROM_EMAIL=ops@silverx.local
ADMIN_EMAIL=
ADMIN_PASSWORD=
SUPPORT_EMAIL=
SUPPORT_PASSWORD=

# ==== Rails secrets ====
RAILS_MASTER_KEY=               # copier depuis config/master.key (dev)
SECRET_KEY_BASE=                # optionnel si non géré par credentials

# ==== Bridge Node ====
BRIDGE_PORT=8080
BRIDGE_LOG_LEVEL=info
