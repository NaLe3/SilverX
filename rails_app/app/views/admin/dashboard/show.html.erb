<section class="mx-auto max-w-6xl space-y-8 px-4 py-8">
  <header class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <p class="text-sm font-semibold uppercase tracking-wide text-slate-500">Monitoring</p>
      <h1 class="text-3xl font-semibold text-slate-900">Dashboard temps r√©el</h1>
      <p class="text-sm text-slate-600">Vue synth√©tique des appels, messages et actions tools corr√©l√©s par call_id.</p>
    </div>
    <%= link_to "Voir tous les appels", admin_calls_path, class: "inline-flex items-center rounded-full bg-slate-900 px-5 py-2 text-sm font-semibold text-white shadow-lg shadow-slate-400/30 hover:bg-slate-700" %>
  </header>

  <section class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <% @metrics.each do |label, value| %>
      <article class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50/80 p-5 shadow-sm">
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-500"><%= label.to_s.humanize %></p>
        <p class="mt-3 text-3xl font-semibold text-slate-900"><%= number_with_delimiter(value) %></p>
      </article>
    <% end %>
  </section>

  <div class="grid gap-6 lg:grid-cols-2">
    <section class="rounded-2xl border border-slate-200 bg-white shadow-sm">
      <header class="flex items-center justify-between border-b border-slate-100 px-5 py-4">
        <div>
          <h2 class="text-sm font-semibold text-slate-700">Appels r√©cents</h2>
          <p class="text-xs text-slate-500">10 derniers appels, tri√©s par cr√©ation.</p>
        </div>
        <%= link_to "Tout voir", admin_calls_path, class: "text-xs font-semibold text-indigo-600 hover:text-indigo-500" %>
      </header>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
            <tr>
              <th class="px-4 py-3">ID</th>
              <th class="px-4 py-3">Statut</th>
              <th class="px-4 py-3">Messages</th>
              <th class="px-4 py-3">Actions</th>
              <th class="px-4 py-3">Cr√©√©</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 bg-white">
            <% @recent_calls.each do |call| %>
              <tr class="hover:bg-slate-50 transition-colors">
                <td class="px-4 py-3 font-semibold text-slate-900">
                  <%= link_to call.external_id.presence || "Call ##{call.id}", admin_call_path(call), class: "hover:underline" %>
                </td>
                <td class="px-4 py-3">
                  <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
                    <%= call.status.humanize %>
                  </span>
                </td>
                <td class="px-4 py-3 text-slate-600"><%= call.messages.size %></td>
                <td class="px-4 py-3 text-slate-600"><%= call.actions.size %></td>
                <td class="px-4 py-3 text-slate-600"><%= l call.created_at, format: :short %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>

    <section class="rounded-2xl border border-slate-200 bg-white shadow-sm">
      <header class="border-b border-slate-100 px-5 py-4">
        <h2 class="text-sm font-semibold text-slate-700">R√©partition des actions</h2>
      </header>
      <div class="grid gap-4 p-5 sm:grid-cols-2">
        <div>
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Par type</p>
          <ul class="mt-3 space-y-2">
            <% if @actions_by_kind.present? %>
              <% @actions_by_kind.each do |kind, count| %>
                <li class="flex items-center justify-between text-sm">
                  <span class="font-semibold text-slate-700"><%= kind.presence || "Inconnu" %></span>
                  <span class="text-slate-500"><%= number_with_delimiter(count) %></span>
                </li>
              <% end %>
            <% else %>
              <li class="text-sm text-slate-500">Pas encore d'actions.</li>
            <% end %>
          </ul>
        </div>

        <div>
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Par statut</p>
          <ul class="mt-3 space-y-2">
            <% if @actions_by_status.present? %>
              <% @actions_by_status.each do |status, count| %>
                <li class="flex items-center justify-between text-sm">
                  <span class="font-semibold text-slate-700"><%= status.presence || "Inconnu" %></span>
                  <span class="text-slate-500"><%= number_with_delimiter(count) %></span>
                </li>
              <% end %>
            <% else %>
              <li class="text-sm text-slate-500">Pas encore d'actions.</li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="border-t border-slate-100 px-5 py-4">
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">√âchecs r√©cents</p>
        <ul class="mt-3 space-y-3 text-sm">
          <% @recent_failures.each do |action| %>
            <li class="rounded-xl border border-rose-100 bg-rose-50/60 px-3 py-2 text-rose-700">
              <div class="flex items-center justify-between text-xs text-rose-500">
                <span><%= action.kind %></span>
                <span><%= l action.updated_at, format: :short %></span>
              </div>
              <div>
                <strong><%= action.status.humanize %></strong>
                ‚Äî Call <%= link_to action.call.external_id.presence || action.call_id, admin_call_path(action.call), class: "underline" %>
              </div>
            </li>
          <% end %>
          <% if @recent_failures.blank? %>
            <li class="text-sm text-slate-500">Aucune erreur r√©cente üéâ</li>
          <% end %>
        </ul>
      </div>
    </section>
  </div>

  <section class="rounded-2xl border border-slate-200 bg-white shadow-sm">
    <header class="border-b border-slate-100 px-5 py-4">
      <h2 class="text-sm font-semibold text-slate-700">Messages r√©cents</h2>
    </header>
    <ul class="divide-y divide-slate-100">
      <% @recent_messages.each do |message| %>
        <li class="px-5 py-4 text-sm">
          <div class="flex items-center justify-between text-xs text-slate-500">
            <span class="font-semibold text-slate-700"><%= message.role.capitalize %></span>
            <span><%= l message.created_at, format: :short %></span>
          </div>
          <p class="mt-2 text-slate-900"><%= truncate(message.content, length: 180) %></p>
          <p class="mt-2 text-xs text-slate-500">
            Appel <%= link_to message.call.external_id.presence || message.call_id, admin_call_path(message.call), class: "underline" %>
          </p>
        </li>
      <% end %>
      <% if @recent_messages.blank? %>
        <li class="px-5 py-6 text-center text-sm text-slate-500">Aucun message pour le moment.</li>
      <% end %>
    </ul>
  </section>
</section>
