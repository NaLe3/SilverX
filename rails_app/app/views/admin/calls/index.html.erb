<div class="mx-auto max-w-6xl space-y-8 px-4 py-8">
  <header class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <p class="text-sm font-semibold uppercase tracking-wide text-slate-500">Opérations</p>
      <h1 class="text-3xl font-semibold text-slate-900">Appels</h1>
      <p class="text-sm text-slate-600">Suivi des 200 derniers appels synchronisés (filtrables par statut, période, ID externe).</p>
    </div>
    <%= link_to "Retour dashboard", admin_dashboard_path, class: "inline-flex items-center rounded-full border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-100" %>
  </header>

  <section class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <% Call::STATUSES.each do |status| %>
      <% count = @status_counts[status] || 0 %>
      <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
        <div class="text-xs uppercase tracking-wide text-slate-500"><%= status.humanize %></div>
        <div class="mt-2 text-3xl font-semibold text-slate-900"><%= count %></div>
        <%= link_to "Filtrer", admin_calls_path(status: status), class: "mt-3 inline-flex items-center text-xs font-semibold text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </section>

  <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-sm font-semibold text-slate-700">Filtres rapides</h2>
    <%= form_with url: admin_calls_path, method: :get,
                  data: { controller: "filters", turbo_frame: "calls_table", filters_delay_value: 350 },
                  class: "mt-4 grid gap-6 md:grid-cols-3" do |f| %>
      <div class="space-y-2">
        <label class="text-xs font-medium uppercase tracking-wide text-slate-500">Recherche (ID externe, client...)</label>
        <%= f.text_field :q, value: @query, placeholder: "CallSid, numéro...",
              class: "w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm text-slate-900 shadow-inner shadow-slate-100 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200",
              data: { action: "input->filters#schedule" } %>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-medium uppercase tracking-wide text-slate-500">Statut</label>
        <%= f.select :status,
              options_for_select([["Tous les statuts", ""]] + Call::STATUSES.map { |s| [s.humanize, s] }, @status),
              {},
              class: "w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200",
              data: { action: "change->filters#submit" } %>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-medium uppercase tracking-wide text-slate-500">Fenêtre temporelle</label>
        <div class="flex flex-wrap gap-2">
          <% range_options.each do |token, label| %>
            <label class="cursor-pointer">
              <%= f.radio_button :range, token,
                    checked: @range == token,
                    class: "peer sr-only",
                    data: { action: "change->filters#submit" } %>
              <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold
                           <%= @range == token ? 'border-indigo-200 bg-indigo-50 text-indigo-700' : 'border-slate-200 bg-white text-slate-600' %>">
                <%= label %>
              </span>
            </label>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>

  <%= turbo_frame_tag "calls_table" do %>
    <%= render partial: "admin/calls/table", locals: { calls: @calls } %>
  <% end %>
</div>
